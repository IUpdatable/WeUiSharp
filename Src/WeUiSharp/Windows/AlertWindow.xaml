<Window x:Class="WeUiSharp.Windows.AlertWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeUiSharp.Windows"
             mc:Ignorable="d" 
             Height="33"
             Width="300"
             WindowStyle="None"
             ResizeMode="NoResize"
             SizeToContent="WidthAndHeight"
             AllowsTransparency="True"
             ShowInTaskbar="False"
             Background="Transparent"
             MinWidth="120">
    <Border CornerRadius="2" Background="{StaticResource BrushRed0}" Opacity="1" BorderThickness="1" BorderBrush="{StaticResource BrushRed1}">
        <TextBlock Foreground="White" x:Name="MessageBlock"
                   Margin="60 0"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextAlignment="Center" TextWrapping="Wrap" Text="{Binding Message}" />
    </Border>
</Window>
